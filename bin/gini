#!/usr/bin/env php
<?php

require '.bootstrap.php';

class Application {

	static function setup() {
		\Model\Cache::setup();
		\Model\Config::setup();
		\Model\I18N::setup();
	}

	static function main($argv) {			
		// $argv包括了我们的cli标准脚本, 因此需要删除
		array_shift($argv);

		//运行命令
		return \Model\CLI::main($argv);
	}

	static function shutdown() {
		return \Model\CLI::shutdown();
	}

	static function exception($e) {
		return \Model\CLI::exception($e);
	}

}